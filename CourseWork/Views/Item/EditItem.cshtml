@model CourseWork.Domain.ViewModels.Item.ItemViewModel

@{
	ViewData["Title"] = "EditItem";
}

<h1 class="text-center">Редактирование айтема</h1>
<div class="container text-center custom-group-form">
	<form asp-action="EditItem" asp-controller="Item" enctype="multipart/form-data" method="post">
		<div class="validation" asp-validation-summary="All"></div>

		<div class="mb-3">
			<label asp-for="Name">Название коллекции</label><br />
			<input class="form-control" type="text" asp-for="Name" />
		</div>

		<div class="mb-3">
			<label asp-for="Content">Описание коллекции</label><br />
			<textarea class="form-control" asp-for="Content"></textarea>
		</div>

		<div class="mb-3">
			<p>Обложка айтема</p>
			<input type="file" name="image" /><br /><br />
		</div>

		<div class="d-flex justify-content-center">
			<button class="btn btn-outline-primary">Сохранить</button>
			<a class="btn btn-outline-danger ml-3" href="/Item/DeleteItem/@Model.Id">Удалить</a>
		</div>

	</form>

</div>

