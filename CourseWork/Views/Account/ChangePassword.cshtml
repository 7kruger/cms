@model CourseWork.ViewModels.Account.ChangePasswordViewModel

@{
    ViewData["Title"] = @Localizer["ChangePassword"];
}

<div class="container text-center custom-group-form">
    <form asp-action="ChangePassword" asp-controller="Account" method="post">
        <div class="validation" asp-validation-summary="All"></div>

        <div class="mb-3">
			<input class="form-control" asp-for="Name" type="text" value="@User.Identity.Name" readonly />
		</div>

        <div class="mb-3">
            <input class="form-control" asp-for="NewPassword" placeholder="@Localizer["NewPassword"]" />
        </div>

        <div class="mb-3">
            <input class="form-control" asp-for="ConfirmPassword" placeholder="@Localizer["RepeatNewPassword"]" />
        </div>

        <div>
            <button class="btn btn-outline-primary">@SharedLocalizer["Save"]</button>
        </div>
    </form>
</div>

