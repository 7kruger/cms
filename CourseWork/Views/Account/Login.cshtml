@model CourseWork.ViewModels.Account.LoginViewModel

@{
	ViewData["Title"] = "Login";
}

<h2 class="text-center">Вход на сайт</h2>

<div class="container text-center custom-group-form">
	<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
		<div class="validation" asp-validation-summary="All"></div>

		<div class="mb-3">
			<label asp-for="Name">Введите логин</label><br />
			<input class="form-control" type="text" asp-for="Name" placeholder="Имя" />
		</div>
		<div class="mb-3">
			<label asp-for="Password">Введите пароль</label><br />
			<input class="form-control" asp-for="Password" placeholder="пароль" />
		</div>

		<div>
			<button class="btn btn-outline-primary" type="submit">Войти</button>
		</div>

	</form>
	<p>Нет аккаунта? - <a asp-action="Register" asp-controller="Account">создайте его</a>!</p>
</div>

