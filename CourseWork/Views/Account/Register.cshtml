@model CourseWork.ViewModels.Account.RegisterViewModel
@{
	ViewData["Title"] = @Localizer["SignUp"];
}
<h2 class="text-center">@Localizer["SignUp"]</h2>

<div class="container text-center custom-group-form">
	<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
		<div class="validation" asp-validation-summary="All"></div>

		<div class="mb-3">
			<label asp-for="Name">@Localizer["EnterLogin"]</label><br />
			<input class="form-control" type="text" asp-for="Name" placeholder="@Localizer["Name"]" />
		</div>
		<div class="mb-3">
			<label asp-for="Password">@Localizer["EnterPassword"]</label><br />
			<input class="form-control" asp-for="Password" placeholder="@Localizer["Password"]" />
		</div>
		<div class="mb-3">
			<label asp-for="ConfirmPassword">@Localizer["ConfirmPassword"]</label><br />
			<input class="form-control" asp-for="ConfirmPassword" placeholder="@Localizer["ConfirmPassword"]" />
		</div>

		<div>
			<button class="btn btn-outline-primary" type="submit">@Localizer["SignUp"]</button>
		</div>
	</form>
	<p>@Localizer["AlreadyHaveAccount"]? - <a asp-action="Login" asp-controller="Account">@Localizer["LogIn"]</a>!</p>
</div>
